{
  "name": "mini-url",
  "version": "1.0.0",
  "description": "Simple URL Shortener using Node.js, ExpressJS and MongoDB",
  "main": "index.js",
  "scripts": {
    "devStart": "nodemon server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install npm install --prefix client && npm run build --prefix client",
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugginsc10/MiniUrl.git"
  },
  "author": "Chas Huggins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hugginsc10/MiniUrl/issues"
  },
  "homepage": "https://github.com/hugginsc10/MiniUrl#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "mongoose": "^5.9.4",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
